{
	"name": "simplcord",
	"version": "1.0.0",
	"description": "SimplCord is a chat application built with the power of MERN Stack.",
	"main": "index.js",
	"scripts": {
		"test": "echo \"Error: no test specified\" && exit 1",
		"client": "cd client && npm start",
		"server": "cd server && npm start",
		"start": "concurrently  \"npm run server\" \"npm run client\"",
		"build": "concurrently  \"cd client && npm run build\"",
		"install-dep": "concurrently  \"cd client && npm install\"  \"cd server && npm install\""
	},
	"repository": {
		"type": "git",
